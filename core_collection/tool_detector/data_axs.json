{
    "_parent_entries": [
        [ "^", "byname", "shell" ]
    ],
    "_producer_rules": [
        [ [ "shell_tool", "can_download_url" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "wget", "shell_cmd_with_subs": "\"#{tool_path}#\" -O \"#{target_path}#\" #{url}#" } ],
        [ [ "shell_tool", "can_download_url" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "curl", "shell_cmd_with_subs": "\"#{tool_path}#\" -L -o \"#{target_path}#\" #{url}#" } ],

        [ [ "shell_tool", "can_extract_tar" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "tar", "strip_components": 0,
            "uncompression_insert": ["AS^IS", "^^", "case",   [ ["^^", "get", "archive_format"],
                "tar", "",
                "tgz", "z"
            ] ],
            "strip_components_insert": ["AS^IS", "^^", "case",   [ ["^^", "get", "strip_components"],
                0, ""
            ], {"default_value": ["^^", "substitute", "--strip-components #{strip_components}#"] } ],
            "shell_cmd_with_subs": "\"#{tool_path}#\" -#{uncompression_insert}#xvf - -C \"#{target_path}#\" #{strip_components_insert}# < \"#{archive_path}#\""
        } ],

        [ [ "shell_tool", "can_extract_zip" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "unzip", "shell_cmd_with_subs": "\"#{tool_path}#\" -d \"#{target_path}#\" \"#{archive_path}#\"" } ],

        [ [ "shell_tool", "can_uncompress_gz" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "gzip.exe", "shell_cmd_with_subs": "\"#{tool_path}#\" -d \"#{target_path}#\"" } ],
        [ [ "shell_tool", "can_uncompress_gz" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "gunzip", "shell_cmd_with_subs": "\"#{tool_path}#\" \"#{target_path}#\"" } ],

        [ [ "shell_tool", "can_compute_md5" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "md5sum.exe", "shell_cmd_with_subs": "\"#{tool_path}#\" \"#{file_path}#\" | cut -f 1 -d \" \" | sed \"s/\\\\\\\\//g\"", "capture_output": true } ],
        [ [ "shell_tool", "can_compute_md5" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "md5sum",     "shell_cmd_with_subs": "'#{tool_path}#' '#{file_path}#' | cut -f 1 -d ' '", "capture_output": true } ],
        [ [ "shell_tool", "can_compute_md5" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "md5",        "shell_cmd_with_subs": "'#{tool_path}#' -r '#{file_path}#' | cut -f 1 -d ' '", "capture_output": true } ],

        [ [ "shell_tool", "can_python" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "custom_python", "shell_cmd_with_subs": "\"#{tool_path}#\" --version", "capture_output": true } ],
        [ [ "shell_tool", "can_python" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "kernel_python", "tool_path": [ "^", "python_path" ], "shell_cmd_with_subs": "\"#{tool_path}#\" --version", "capture_output": true } ],

        [ [ "shell_tool", "can_git"], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "git", "shell_cmd": [ "AS^IS", "^^", "substitute", [[
            "#{tool_path}#",
            "--version"
        ]] ], "capture_output": true } ],
        [ [ "shell_tool", "can_gpu" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "nvidia-smi", "shell_cmd_with_subs": "\"#{tool_path}#\" -L | grep -c GPU" ,  "capture_output": true} ],
        [ [ "shell_tool", "can_gpu" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "echo", "shell_cmd": "echo 0" ,  "capture_output": true} ],

        [ [ "shell_tool", "can_compile_c" ], [ "^^", "get", "__entry__" ], "detect", { "tool_name": "gcc", "shell_cmd_with_subs": "\"#{tool_path}#\" --version", "capture_output": true } ]
    ],


    "tool_path": [ "^^", "which" ],
    "tool_name": [ "^^", "basename" ]
}
